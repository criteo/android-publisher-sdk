<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".DfpActivity"
  tools:showIn="@layout/activity_dfp">

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
          android:id="@+id/buttonBanner"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="#81C784"
          android:text="@string/btn_banner"/>

        <Button
          android:id="@+id/buttonInterstitial"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="5dp"
          android:layout_marginLeft="5dp"
          android:background="#81C784"
          android:text="@string/btn_interstitial"/>

        <Button
          android:id="@+id/buttonInterstitialVideo"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="5dp"
          android:layout_marginLeft="5dp"
          android:background="#81C784"
          android:text="@string/btn_interstitial_video"/>

        <Button
          android:id="@+id/buttonCustomNative"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="5dp"
          android:layout_marginLeft="5dp"
          android:background="#81C784"
          android:text="@string/btn_custom_native"/>

        <Button
          android:id="@+id/buttonRewardedVideo"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="5dp"
          android:layout_marginLeft="5dp"
          android:background="#81C784"
          android:text="@string/btn_rewarded_video"/>
      </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
      android:id="@+id/adViewHolder"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>